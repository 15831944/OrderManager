                      PreviewMouseDown="MouseDown_TitleBar" PreviewMouseMove="MouseMove_TitleBar"
                      Style="{DynamicResource Titlebar_text}" />

                    <StackPanel
                      HorizontalAlignment="Right" VerticalAlignment="Center" Panel.ZIndex="1"
                      Background="{DynamicResource Common_OrangeTitleBar}"
                      Orientation="Horizontal">
                        <Button
                          Name="systemButton_ContactInteware" Click="Click_TitleBar_titlebarButtons"
                          Style="{StaticResource systemButton_contactInteware}"
                          ToolTip="{local:LocExtension Contact}" />
                        <Button Name="systemButton_Close" Click="Click_TitleBar_titlebarButtons" Style="{StaticResource systemButton_close}" />
                    </StackPanel>
                </Grid>
