<Window
    x:Class="OrderManagerNew.Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OrderManagerNew"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Setting"
    Width="500"
    Height="500"
    AllowsTransparency="True"
    Background="#FF30312C"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Height" Value="24" />
                <Setter Property="BorderThickness" Value="1" />
            </Style>
            <Style
                x:Key="btn_folderOpen"
                BasedOn="{StaticResource FunctionButton_Skin}"
                TargetType="{x:Type Button}">
                <Setter Property="Height" Value="32" />
                <Setter Property="Width" Value="32" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Image Name="BtnBG_refresh" Source="{StaticResource icon_folderDrawingImage}" />
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BtnBG_refresh" Property="Source" Value="{StaticResource icon_folder_mouseDrawingImage}" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="BtnBG_refresh" Property="Source" Value="{StaticResource icon_folder_clickDrawingImage}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderThickness="0">
        <DockPanel>
            <!--  TitleBar-Start  -->
            <Border
                Height="42"
                Background="#FFE08A1E"
                DockPanel.Dock="Top">
                <Grid>
                    <Label
                        Margin="6,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Setting"
                        FontSize="21"
                        FontWeight="Bold"
                        Foreground="White" />

                    <StackPanel
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        Background="#FFE08A1E"
                        Orientation="Horizontal">
                        <Button
                            Name="systemButton_Close"
                            Click="TitleBar_Click_titlebarButtons"
                            Style="{DynamicResource systemButton_close}" />
                    </StackPanel>
                </Grid>
            </Border>
            <!--  TitleBar-End  -->
            <Grid Margin="12" Background="#FF30312C">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                    <RowDefinition />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="42" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Program Path"
                    Foreground="White" />
                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="52" />
                    </Grid.ColumnDefinitions>

                    <Rectangle
                        Grid.Row="0"
                        Grid.RowSpan="6"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Fill="{DynamicResource background_CaseTable}" />

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="EZCAD" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="ImplantPlanning" />
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="OrthoAnalysis" />
                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="EZCAD.Tray" />
                    <Label
                        Grid.Row="4"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="EZCAD.Splint" />
                    <Label
                        Grid.Row="5"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="EZCAD.Guide" />

                    <TextBox Grid.Row="0" Grid.Column="1" />
                    <TextBox Grid.Row="1" Grid.Column="1" />
                    <TextBox Grid.Row="2" Grid.Column="1" />
                    <TextBox Grid.Row="3" Grid.Column="1" />
                    <TextBox Grid.Row="4" Grid.Column="1" />
                    <TextBox Grid.Row="5" Grid.Column="1" />

                    <Button
                        Grid.Row="0"
                        Grid.Column="2"
                        Style="{DynamicResource btn_folderOpen}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Style="{DynamicResource btn_folderOpen}" />
                    <Button
                        Grid.Row="2"
                        Grid.Column="2"
                        Style="{DynamicResource btn_folderOpen}" />
                    <Button
                        Grid.Row="3"
                        Grid.Column="2"
                        Style="{DynamicResource btn_folderOpen}" />
                    <Button
                        Grid.Row="4"
                        Grid.Column="2"
                        Style="{DynamicResource btn_folderOpen}" />
                    <Button
                        Grid.Row="5"
                        Grid.Column="2"
                        Style="{DynamicResource btn_folderOpen}" />
                </Grid>
                <Grid Grid.Row="2" Margin="0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Fill="{DynamicResource background_CaseTable}" />
                    <Label
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Language"
                        Foreground="{DynamicResource Common_DarkBrown}" />
                    <ComboBox
                        Grid.Column="1"
                        Margin="6,0"
                        Style="{DynamicResource comboboxSetting}">
                        <ComboBoxItem>English</ComboBoxItem>
                        <ComboBoxItem>繁體中文</ComboBoxItem>
                    </ComboBox>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Width="150"
                        Height="36"
                        Content="OK" />
                    <Button
                        Grid.Column="1"
                        Width="150"
                        Height="36"
                        Content="Cancel" />
                </Grid>
            </Grid>
        </DockPanel>
    </Border>
</Window>
