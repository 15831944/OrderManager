                            </Grid>
                        </Expander>
                        <Expander Header="{local:LocExtension ByDate}" Style="{StaticResource ExpanderStyle}">
                            <Grid Background="#FF756550">
                                <Grid.Resources>
                                    <Style BasedOn="{StaticResource SortRadioButton}" TargetType="{x:Type RadioButton}">
                                        <EventSetter Event="Checked" Handler="Checked_SortTable_Filter" />
                                        <Setter Property="GroupName" Value="SortRadio" />
                                    </Style>
                                </Grid.Resources>
                                <StackPanel Margin="30,0,0,0" Orientation="Vertical">
                                    <RadioButton Name="DateFilterAll" Content="{local:LocExtension All}" IsChecked="True" />
                                    <RadioButton Name="DateFilterToday" Content="{local:LocExtension Today}" />
                                    <RadioButton Name="DateFilterTW" Content="{local:LocExtension ThisWeek}" />
                                    <RadioButton Name="DateFilterL2W" Content="{local:LocExtension Last2Week}" />
                                </StackPanel>
                            </Grid>
                        </Expander>
                        <Expander Header="{local:LocExtension ByPatient}" Style="{StaticResource ExpanderStyle}">
                            <Grid Background="#FF756550">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" x:Name="checkboxPatient" />
                                <TextBox
                                  Grid.Column="1" x:Name="textboxPatient"
                                  Style="{StaticResource SortTextBox}"
                                  Text="" TextChanged="TextChanged_SortTable" />
                            </Grid>
                        </Expander>
                        <Expander Header="{local:LocExtension ByCase}" Style="{StaticResource ExpanderStyle}">
                            <Grid Background="#FF756550">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" x:Name="checkboxCase" />
                                <TextBox
                                  Grid.Column="1" x:Name="textboxCase"
                                  Style="{StaticResource SortTextBox}"
                                  Text="" TextChanged="TextChanged_SortTable" />
                            </Grid>
                        </Expander>
                    </StackPanel>
                    <!--  FilterTable-End  -->

                    <!--  CaseTable-Start  -->
                    <TabControl
                      Grid.Column="1" x:Name="tabcontrol_Main"
                      Background="{StaticResource background_SuperDarkCaseTable}"
                      BorderBrush="{StaticResource background_SuperDarkCaseTable}"
                      BorderThickness="1" Focusable="False">
                        <TabItem x:Name="tabitem_Local" Header="{local:LocExtension Local}" Style="{StaticResource CaseTabItem}">
                            <Border Background="#FFEDEDE2">
                                <ScrollViewer x:Name="scrollbar_local">
                                    <StackPanel x:Name="StackPanel_Local" Orientation="Vertical" />
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                        <TabItem
                          x:Name="tabitem_Cloud" Header="Airdental"
                          Style="{StaticResource CaseTabItem}"
                          ToolTipService.ShowOnDisabled="True">
                            <Border Background="#FFEDEDE2">
                                <ScrollViewer>
                                    <StackPanel x:Name="StackPanel_Cloud" Orientation="Vertical" />
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                    </TabControl>
                    <!--  CaseTable-End  -->

                    <!--  InfoTable-Start  -->
                    <Border Grid.Column="2" Background="{StaticResource background_SuperDarkCaseTable}" BorderThickness="0,2">
                        <ScrollViewer>
                            <StackPanel x:Name="StackPanel_Detail" Orientation="Vertical" />
                        </ScrollViewer>
                    </Border>
                    <!--  InfoTable-End  -->
                </Grid>
            </Grid>
        </DockPanel>
    </Border>
</Window>
