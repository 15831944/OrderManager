                      Grid.Column="2" x:Name="usercontrolUserDetail" HorizontalAlignment="Right"
                      VerticalAlignment="Top" Panel.ZIndex="1" LogoutClick="Click_UserDetail_Logout"
                      UserPoints="0">
                        <uc:AirdentalUserDetail.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform Y="-500" />
                            </TransformGroup>
                        </uc:AirdentalUserDetail.RenderTransform>
