                          HorizontalAlignment="Right" VerticalAlignment="Top" Click="Click_TitleBar_titlebarButtons"
                          Style="{StaticResource systemButton_max}" />
                        <Button Name="systemButton_Close" Click="Click_TitleBar_titlebarButtons" Style="{StaticResource systemButton_close}" />
