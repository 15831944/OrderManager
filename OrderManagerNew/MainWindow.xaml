<Window
    x:Class="OrderManagerNew.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
    xmlns:local="clr-namespace:OrderManagerNew"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OrderManager"
    Width="1280"
    Height="768"
    Background="#FF353531"
    StateChanged="Window_StateChanged"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary Source="StyleDictionary.xaml" />
    </Window.Resources>

    <Border BorderThickness="0">
        <DockPanel>
            <!--  TitleBar-Start  -->
            <Border
                Height="42"
                Background="#FFE08A1E"
                DockPanel.Dock="Top">
                <Grid>
                    <Label
                        Margin="0,0,143,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        PreviewMouseDown="TitleBar_MouseDown"
                        PreviewMouseMove="TitleBar_MouseMove">
                        <Image
                            Height="42"
                            Margin="20,-5,0,0"
                            Source="{StaticResource INTEWARE_TITLE_OrderManagerDrawingImage}" />
                    </Label>
                    <Label
                        x:Name="titlebar_OrderManagerVersion"
                        Margin="250,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="v0.1.4.3"
                        Foreground="White"
                        PreviewMouseDown="TitleBar_MouseDown"
                        PreviewMouseMove="TitleBar_MouseMove" />

                    <StackPanel
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        Background="#FFE08A1E"
                        Orientation="Horizontal">
                        <Button
                            Name="systemButton_ContactInteware"
                            Click="TitleBar_Click_titlebarButtons"
                            Style="{StaticResource systemButton_contactInteware}" />
                        <Button
                            Name="systemButton_Minimize"
                            Click="TitleBar_Click_titlebarButtons"
                            Style="{StaticResource systemButton_mimimize}" />

                        <ToggleButton
                            Name="systemButton_Maximize"
                            Width="35"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Click="TitleBar_Click_titlebarButtons"
                            Style="{StaticResource systemButton_max}" />
                        <Button
                            Name="systemButton_Close"
                            Click="TitleBar_Click_titlebarButtons"
                            Style="{StaticResource systemButton_close}" />
                    </StackPanel>
                </Grid>
            </Border>
            <!--  TitleBar-End  -->


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--  FunctionTable-Start  -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Fill="White" />

                    <!--  SoftwareTable  -->
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Grid Width="18" />
                        <Grid Margin="6,0">
                            <Rectangle
                                x:Name="mask_EZCAD"
                                Panel.ZIndex="1"
                                Fill="White"
                                Opacity="0.9" />
                            <ed:Arc x:Name="process_EZCAD" Style="{StaticResource progressArc}" />
                            <Image Source="ImageSource/FunctionTable/icon_D.png" Style="{StaticResource progressImage}" />
                        </Grid>
                        <Grid Margin="6,0">
                            <Rectangle
                                x:Name="mask_Implant"
                                Panel.ZIndex="1"
                                Fill="White"
                                Opacity="0.9" />
                            <ed:Arc x:Name="process_Implant" Style="{StaticResource progressArc}" />
                            <Image Source="ImageSource/FunctionTable/icon_I.png" Style="{StaticResource progressImage}" />
                        </Grid>
                        <Grid Margin="6,0">
                            <Rectangle
                                x:Name="mask_Ortho"
                                Panel.ZIndex="1"
                                Fill="White"
                                Opacity="0.9" />
                            <ed:Arc x:Name="process_Ortho" Style="{StaticResource progressArc}" />
                            <Image Source="ImageSource/FunctionTable/icon_O.png" Style="{StaticResource progressImage}" />
                        </Grid>
                        <Grid Margin="6,0">
                            <Rectangle
                                x:Name="mask_Tray"
                                Panel.ZIndex="1"
                                Fill="White"
                                Opacity="0.9" />
                            <ed:Arc x:Name="process_Tray" Style="{StaticResource progressArc}" />
                            <Image Source="ImageSource/FunctionTable/icon_T.png" Style="{StaticResource progressImage}" />
                        </Grid>
                        <Grid Margin="6,0">
                            <Rectangle
                                x:Name="mask_Splint"
                                Panel.ZIndex="1"
                                Fill="White"
                                Opacity="0.9" />
                            <ed:Arc x:Name="process_Splint" Style="{StaticResource progressArc}" />
                            <Image Source="ImageSource/FunctionTable/icon_S.png" Style="{StaticResource progressImage}" />
                        </Grid>
                        <Button
                            Height="48"
                            Click="Button_Click"
                            Content="Update" />
                    </StackPanel>

                    <!--  ordermanagerFunction  -->
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button Style="{StaticResource FunctionButton_refresh}" />
                        <Button Style="{StaticResource FunctionButton_update}" />
                        <Button Style="{StaticResource FunctionButton_cloud}" />
                        <Button Style="{StaticResource FunctionButton_setting}" />
                        <Grid Width="6" />
                    </StackPanel>
                </Grid>
                <!--  FunctionTable-End  -->

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="172" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <!--  SortTable-Start  -->
                    <StackPanel
                        Grid.Column="0"
                        Margin="0,3"
                        Background="#FF756550"
                        Orientation="Vertical">
                        <Expander Header="{local:LocExtension ByPatient}" Style="{StaticResource ExpanderStyle}">
                            <Grid Background="#FF756550">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <CheckBox
                                    x:Name="checkboxPatient"
                                    Grid.Column="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Checked="SortTable_Checked"
                                    Unchecked="SortTable_UnChecked" />
                                <TextBox
                                    x:Name="textboxPatient"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Style="{StaticResource SortTextBox}"
                                    Text=""
                                    TextChanged="SortTable_TextChanged" />
                            </Grid>
                        </Expander>
                        <Expander Header="{local:LocExtension ByCase}" Style="{StaticResource ExpanderStyle}">
                            <Grid Background="#FF756550">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <CheckBox
                                    x:Name="checkboxCase"
                                    Grid.Column="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Checked="SortTable_Checked"
                                    Unchecked="SortTable_UnChecked" />
                                <TextBox
                                    x:Name="textboxCase"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Style="{StaticResource SortTextBox}"
                                    Text=""
                                    TextChanged="SortTable_TextChanged" />
                            </Grid>
                        </Expander>
                        <Expander Header="{local:LocExtension ByDate}" Style="{StaticResource ExpanderStyle}">
                            <Grid Background="#FF756550">
                                <StackPanel Margin="30,0,0,0" Orientation="Vertical">
                                    <RadioButton
                                        Name="DateFilterAll"
                                        Click="SortTable_Click_Filter"
                                        Content="{local:LocExtension All}"
                                        GroupName="SortRadio"
                                        IsChecked="True"
                                        Style="{StaticResource SortRadioButton}" />
                                    <RadioButton
                                        Name="DateFilterToday"
                                        Click="SortTable_Click_Filter"
                                        Content="{local:LocExtension Today}"
                                        GroupName="SortRadio"
                                        Style="{StaticResource SortRadioButton}" />
                                    <RadioButton
                                        Name="DateFilterLW"
                                        Click="SortTable_Click_Filter"
                                        Content="{local:LocExtension LastWeek}"
                                        GroupName="SortRadio"
                                        Style="{StaticResource SortRadioButton}" />
                                    <RadioButton
                                        Name="DateFilterL2W"
                                        Click="SortTable_Click_Filter"
                                        Content="{local:LocExtension Last2Week}"
                                        GroupName="SortRadio"
                                        Style="{StaticResource SortRadioButton}" />
                                </StackPanel>
                            </Grid>
                        </Expander>
                        <Expander Header="{local:LocExtension BySoftware}" Style="{StaticResource ExpanderStyle}">
                            <Grid Background="#FF756550">
                                <StackPanel Margin="30,0,0,0" Orientation="Vertical">
                                    <RadioButton
                                        Name="SoftwareFilterAll"
                                        Click="SortTable_Click_Filter"
                                        Content="{local:LocExtension All}"
                                        GroupName="SortSoftware"
                                        IsChecked="True"
                                        Style="{StaticResource SortRadioButton}" />
                                    <RadioButton
                                        Name="SoftwareFilterCAD"
                                        Click="SortTable_Click_Filter"
                                        Content="CAD"
                                        GroupName="SortSoftware"
                                        Style="{StaticResource SortRadioButton}" />
                                    <RadioButton
                                        Name="SoftwareFilterImplant"
                                        Click="SortTable_Click_Filter"
                                        Content="Implant"
                                        GroupName="SortSoftware"
                                        Style="{StaticResource SortRadioButton}" />
                                    <RadioButton
                                        Name="SoftwareFilterOrtho"
                                        Click="SortTable_Click_Filter"
                                        Content="Ortho"
                                        GroupName="SortSoftware"
                                        Style="{StaticResource SortRadioButton}" />
                                    <RadioButton
                                        Name="SoftwareFilterTray"
                                        Click="SortTable_Click_Filter"
                                        Content="Tray"
                                        GroupName="SortSoftware"
                                        Style="{StaticResource SortRadioButton}" />
                                    <RadioButton
                                        Name="SoftwareFilterSplint"
                                        Click="SortTable_Click_Filter"
                                        Content="Splint"
                                        GroupName="SortSoftware"
                                        Style="{StaticResource SortRadioButton}" />
                                </StackPanel>
                            </Grid>
                        </Expander>
                    </StackPanel>
                    <!--  SortTable-End  -->

                    <!--  CaseTable-Start  -->
                    <TabControl
                        Grid.Column="1"
                        Background="Transparent"
                        BorderBrush="#FF353531"
                        BorderThickness="1">
                        <TabItem Header="{local:LocExtension Local}" Style="{StaticResource CaseTabItem}">
                            <Border Background="#FFEDEDE2">
                                <ScrollViewer x:Name="scrollbar_local">
                                    <StackPanel x:Name="stk" Orientation="Vertical" />
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                        <TabItem Header="Airdental" Style="{StaticResource CaseTabItem}">
                            <Border Background="#FFEDEDE2">
                                <ScrollViewer>
                                    <StackPanel Orientation="Vertical" />
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                    </TabControl>
                    <!--  CaseTable-End  -->

                    <!--  InfoTable-Start  -->
                    <Frame
                        Grid.Column="2"
                        Background="White"
                        BorderBrush="#FF353531"
                        BorderThickness="0,3" />
                    <!--  InfoTable-End  -->
                </Grid>
            </Grid>
        </DockPanel>
    </Border>
</Window>
