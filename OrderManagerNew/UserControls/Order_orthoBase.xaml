<UserControl
  x:Class="OrderManagerNew.UserControls.Order_orthoBase" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OrderManagerNew.UserControls" xmlns:local1="clr-namespace:OrderManagerNew"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="68" d:DesignWidth="700"
  BorderThickness="0" mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/StyleDictionary.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Rectangle
          Grid.Row="1" Grid.Column="1" Width="Auto"
          Height="54" Margin="6,3,0,3" VerticalAlignment="Top"
          Panel.ZIndex="-1" Fill="White" />

        <StackPanel
          x:Name="stackpanel_Implant" Grid.Row="1" Grid.Column="1"
          Orientation="Vertical">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="FontFamily" Value="Arial" />
                        <Setter Property="FontSize" Value="16" />
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="42" />
                    <ColumnDefinition Width="42" />
                </Grid.ColumnDefinitions>

                <Label
                  x:Name="label_orderID" Grid.Row="0" Grid.Column="1"
                  Grid.ColumnSpan="2" Content="OrderID" FontSize="20"
                  FontWeight="Bold"
                  ToolTip="{local1:LocExtension OrderID}" />
                <Label
                  x:Name="label_patientName" Grid.Row="0" Grid.Column="2"
                  Grid.ColumnSpan="2" Content="PatientName"
                  ToolTip="{local1:LocExtension PatientName}" />
                <Label
                  x:Name="label_designStep" Grid.Row="1" Grid.Column="1"
                  Content="DesignStep"
                  ToolTip="{local1:LocExtension DesignStep}" />
                <Label
                  x:Name="label_createDate" Grid.Row="1" Grid.Column="2"
                  Grid.ColumnSpan="2" Content="CreateDate"
                  ToolTip="{local1:LocExtension CreateDate}" />

                <Image Grid.Row="0" Grid.RowSpan="2" Source="/ImageSource/FunctionTable/icon_I.png" />
                <Button
                  Grid.Row="0" Grid.RowSpan="2" Grid.Column="5"
                  Click="Click_OpenDir"
                  Style="{StaticResource btn_folderOpen}"
                  ToolTip="{local1:LocExtension OpenCaseFolder}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
